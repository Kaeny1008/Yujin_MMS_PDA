<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.or.yujin.mmps">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="kr.or.yujin.mmps.App.permission.SCANNER_RESULT_RECEIVER"
        android:protectionLevel="normal" />

    <uses-permission android:name="kr.or.yujin.mmps.App.permission.SCANNER_RESULT_RECEIVER" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher_mmps"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mmps_round"
        android:supportsRtl="true"
        android:theme="@style/NoTitle"
        android:usesCleartextTraffic="true">
        <activity android:name=".App.Activity.PartsChangeActivity_Select"></activity>
        <activity android:name=".App.Activity.PartsChangeActivity_BLU" />
        <activity android:name=".App.Activity.FeederChangeActivity" />

        <!-- uses-library를 실제 기기사용시 주석 제거해야함. -->

        <uses-library
            android:name="device.sdk"
            android:required="true" />


        <activity android:name=".App.Activity.DeviceDataActivity" />
        <activity android:name=".App.Activity.PartsChangeActivity_New" />
        <activity android:name=".App.Activity.MisCheckActivity" />
        <activity android:name=".App.Activity.AllPartsCheck" />
        <activity
            android:name=".App.Activity.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".App.Activity.AppSetting" />
        <activity android:name=".App.Activity.Scanner1DActivity" />
        <activity android:name=".App.Activity.Scanner2DActivity" />
        <activity android:name=".App.Activity.ScannerAllActivity" />

        <service android:name=".App.Class.ForecdTerminationService"
            android:stopWithTask="false" />
    </application>

</manifest>