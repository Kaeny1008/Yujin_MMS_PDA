<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mmng.Stock_Survey"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_border_title"
        android:gravity="center_vertical"
        android:text="재고조사 실행"
        android:textColor="#FFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:gravity="fill"
            android:text="진행사항 안내"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInformation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[기본정보]"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorker"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="작업자"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etWorker"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSurveyNo"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="재고조사번호"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/spnSurveyNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textSize="17dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/tvInformation2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[확인정보]"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPartCode"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="자재코드"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etPartCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvVendor"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="Vendor"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etVendor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPartNo"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="Part No."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etPartNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLotNo"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="Lot No."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etLotNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:enabled="true"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="수량"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etQty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:enabled="true"
                    android:textSize="20dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/tvInformation3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[진행정보]"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTotalQty"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="전산재고"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etTotalQty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAccumulateQty"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="fill"
                    android:text="누적수량"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etAccumulateQty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="0" />

                <Button
                    android:id="@+id/btnResultSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>