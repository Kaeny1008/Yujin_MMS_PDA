<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".smt_production.SMT_Production_Start_Check"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_border_title"
        android:gravity="center_vertical"
        android:text="생산시작 등록 확인"
        android:textColor="#FFFF"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/tvInformation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[기본정보]"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOrderIndex"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="주문번호"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_OrderIndex"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_lightblue"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCustomer"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="고객사"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_Customer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_lightblue"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemCode"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="품번"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_ItemCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_lightblue"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="품명"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_ItemName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_lightblue"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOrderQty"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="주문수량"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_OrderQty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_lightblue"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/tvInformation2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[생산정보]"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTopBottom"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="BOM 작업구분"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_TopBottom"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_lightblue"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="주문상태"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_OrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/text_border_lightblue"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBottomStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bottom 작업"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnTopStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top 작업"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15sp" />

        <Button
            android:id="@+id/btnProductionEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작업종료"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>