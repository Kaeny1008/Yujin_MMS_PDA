<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".App.Activity.DeviceDataActivity"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_border_title"
        android:gravity="center_vertical"
        android:text="DeviceData 등록"
        android:textColor="#FFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInformation2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[기본정보]"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCustomer"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="고객사"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/spnCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvModel"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="모델"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/spnModel"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFactory"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="공장"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/spnFactory"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorkLine"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="작업 Line"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/spnWorkLine"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWorkSide"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="작업면"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/spnWorkSide"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textSize="17dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/tvInformation4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[위치선택]"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/text_border_white_back_color"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMachineNo"
                            android:layout_width="120dp"
                            android:layout_height="32dp"
                            android:layout_weight="0"
                            android:background="@drawable/text_border_blue"
                            android:gravity="center"
                            android:text="Machine No"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/etMachineNo"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="0"
                            android:background="@drawable/text_border_lightblue"
                            android:enabled="true"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#c9c9c9"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvFeederNo"
                            android:layout_width="120dp"
                            android:layout_height="32dp"
                            android:layout_weight="0"
                            android:background="@drawable/text_border_blue"
                            android:gravity="center"
                            android:text="Feeder No"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/etFeederNo"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_weight="0"
                            android:background="@drawable/text_border_lightblue"
                            android:enabled="true"
                            android:inputType="number"
                            android:selectAllOnFocus="true"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#c9c9c9"
                            android:textSize="17dp" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnFindFeeder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="확인"
                    android:textSize="20dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/tvInformation6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[현재 등록된 정보]"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOrgMaker"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="제조사"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/etOrgMaker"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:enabled="false"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOrgPartNo"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="Part No."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/etOrgPartNo"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:enabled="false"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="17dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/tvInformation5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/text_border_subtitle"
                android:gravity="center_vertical"
                android:text="[Data 입력]"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMaker"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="제조사"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <Spinner
                    android:id="@+id/spnMaker"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPartNo2"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="Part No."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tvPartNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_lightblue"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textColorHint="#c9c9c9"
                    android:textSize="17dp" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_border_lightblue"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInputType"
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="@drawable/text_border_blue"
                    android:gravity="center"
                    android:text="저장방법"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/rbAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가" />

                <RadioButton
                    android:id="@+id/rbReplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대치" />

                <RadioButton
                    android:id="@+id/rbNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="신규" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_weight="0" />

                <Button
                    android:id="@+id/btnResultSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


