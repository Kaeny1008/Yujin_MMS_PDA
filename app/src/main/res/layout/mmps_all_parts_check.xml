<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mmps.All_Parts_Check"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/text_border_title"
        android:gravity="center_vertical"
        android:text="All Parts Check"
        android:textColor="#FFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:gravity="fill"
            android:text="진행사항 안내"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/tvInformation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/text_border_subtitle"
        android:gravity="center_vertical"
        android:text="[기본정보]"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWorker"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="작업자"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etWorker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:enabled="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:hint="작업자를 입력하세요."
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMainDDCode"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="작업지시번호"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etMainDDCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:selectAllOnFocus="true"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:enabled="false"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMachineNo"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="Machine No"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etMachineNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:enabled="false"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFeederNo"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="Feeder No."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etFeederNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:enabled="false"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textSize="20dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0" />

    <TextView
        android:id="@+id/tvInformation2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/text_border_subtitle"
        android:gravity="center_vertical"
        android:text="[확인정보]"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold" />

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFeederSN"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="Feeder SN"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etFeederSN"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:enabled="false"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPartCode"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="Part Code"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etPartCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:enabled="false"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPartNo"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="Part No."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etPartNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:enabled="false"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLotNo"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="Lot No."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etLotNo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="text"
            android:enabled="true"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_white_back_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvQty"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="수량"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etQty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_lightblue"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#c9c9c9"
            android:enabled="true"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/noFeeder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="Parts Check만하기" />

        <CheckBox
            android:id="@+id/noQTYAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="수량 자동입력 X"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/text_border_lightblue"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tvMaker"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:background="@drawable/text_border_blue"
            android:gravity="fill"
            android:text="제조사 선택"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/spnMaker"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:textSize="17dp"/>

    </LinearLayout>
</LinearLayout>